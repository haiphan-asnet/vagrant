{
  "name": "db_postgresql",
  "chef_type": "role",
  "json_class": "Chef::Role",
  "description": "The role that used to install PostgreSql to DB servers",

  "default_attributes": {
    "postgresql": {
      "version": "9.3",
      "listen_addresses": "0.0.0.0",
      "users": [
        {
          "username": "postgres",
          "password": "postgres",
          "superuser": true,
          "createdb": true,
          "login": true
        }
      ],
      "pg_hba_defaults": false,
      "pg_hba": [
        { "type": "local", "db": "all", "user": "postgres",   "addr": "",             "method": "md5" },
        { "type": "local", "db": "all", "user": "all",        "addr": "",             "method": "trust" },
        { "type": "host",  "db": "all", "user": "all",        "addr": "127.0.0.1/32", "method": "trust" },
        { "type": "host",  "db": "all", "user": "all",        "addr": "::1/128",      "method": "trust" }
      ]
    }
  },

  "run_list": [
    "recipe[postgresql-locale-fix]",
    "recipe[postgresql::client]",
    "recipe[postgresql::server]",
    "recipe[postgresql::server_dev]",
    "recipe[postgresql::contrib]",
    "recipe[postgresql::pg_user]",
    "recipe[postgresql::configuration]"
  ]
}